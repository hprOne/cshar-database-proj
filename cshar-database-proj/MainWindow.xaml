<Window x:Class="QuickCar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cshar_database_proj"
        mc:Ignorable="d"
        Title="QuickCar Base App" Height="720" Width="1280">
    <Grid x:Name="QuickCarApp">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="background2.jpg"/>
        </Grid.Background>
        <Button x:Name="Button" Grid.ColumnSpan="2" Content="Button" HorizontalAlignment="Left" Height="55" Margin="1060,565,0,0" VerticalAlignment="Top" Width="145"/>
        <ListBox x:Name="ListBox_Cars" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="500" Margin="35,120,0,0" VerticalAlignment="Top" Width="290"/>
        <TextBlock x:Name="Samochody_Text" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="40" Margin="35,45,0,0" TextWrapping="Wrap" Text="SAMOCHODY" VerticalAlignment="Top" Width="290" TextAlignment="Center" FontSize="22"/>
    </Grid>
</Window>